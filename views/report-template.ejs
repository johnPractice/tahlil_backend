<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        * {
            border: 0;
            padding: 0;
            margin: 0;
            text-decoration: 0;
        }
        
        .container {
            width: 210mm;
            border: 1px solid black;
            margin: 20px auto;
            border-radius: 10px;
            padding: 40px;
            direction: rtl;
            position: relative;
            overflow: auto;
        }
        /* header */
        
        .header {
            width: 90%;
            margin: 5px auto;
            display: black;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: space-between;
            align-items: stretch;
            margin-bottom: 30px;
            border-bottom: 1px solid black;
            /* border: 1px solid black; */
        }
        
        .header .left {
            padding: 5px;
            width: 60%;
            /* background-color: green; */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: flex-start;
            font-size: 18px;
        }
        
        .header .left .items {
            margin: 2px 0;
        }
        
        
        
        .header .right img {
            height: 40mm;
            display: flex
        }
        /* table */
        
        .table {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: stretch;
            width: 90%;
            margin: 0 auto;
        }
        
        .tr {
            display: flex;
            flex-direction: row;
            border: 1px solid black;
            border-right: 0;
            width: 100%;
            justify-content: space-between;
            align-items: stretch;
            margin: 0 auto;
        }
        
        .tr:nth-child(odd) {
            background-color: rgba(185, 185, 185, 0.471);
        }
        
        .tr.title {
            font-size: 20px;
            font-weight: bold;
        }
        
        .tr .tc {
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            border-right: 1px solid black;
            padding: 10px;
            text-align: center;
            flex: 23%;
            cursor: pointer;
        }
        
        .tc .question {
            display: none;
            position: absolute;
            top: -20px;
            left: -100%;
            /* right: -100px; */
            /* height: 80%; */
            background-color: rgba(92, 90, 90, 0.853);
            transition: .3s ease-in;
            color: white;
            border-radius: 10px;
            padding: 7px;
        }
        
        .tc:hover .question {
            display: block;
        }
        /* print-btn */
        
        .print-btn {
            width: 50px;
            height: 50px;
            background-color: rgb(153, 0, 255);
            position: fixed;
            bottom: 50px;
            left: auto;
            right: 50px;
            border: 1px solid black;
            z-index: 1;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 0 10px grey;
            transition: 0.3s ease;
        }
        
        #print-btn.show {
            border-radius: 50%;
        }
        
        .print-btn i {
            font-size: 25px;
            color: white;
        }
        
        #print-btn1 {
            z-index: 0;
            background-color: greenyellow;
            border-radius: 50%;
        }
        
        #print-btn2 {
            z-index: 0;
            background-color: rgb(248, 61, 3);
            border-radius: 50%;
        }
        
        #print-btn1.show {
            bottom: 120px;
        }
        
        #print-btn2.show {
            bottom: 190px;
        }
        
        #print-btn2 i {
            color: black;
        }
        /* bottom */
        
        .bottom {
            direction: ltr;
            position: relative;
            bottom: 0;
            height: 120px;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-around;
            /* border-top: 1px solid black; */
            width: 100%;
            margin: 0 auto;
            left: 0;
            padding: 10px;
        }
        
        .bottom .sign,
        .bottom .logo {
            width: 30%;
            height: 60%;
        }
        
        .bottom .sign img,
        .bottom .logo img {
            width: 100%;
            height: 100%;
        }
        /* print */
        
        @media print {
            .print-btn {
                display: none !important;
            }
        }
    </style>
    <title>Karname</title>
</head>

<body>
    <div class="container">
        <div class="header">
            <div class="left">
                <div class="items">
                    <span><b>کلاس:</b></span>
                    <span><%= reportHeader.Class %></span>
                </div>
                <div class="items">
                    <span><b>دبیر:</b></span>
                    <span><%= reportHeader.classAdmin %></span>
                </div>
                <div class="items">
                    <span><b>نام کاربری:</b></span>
                    <span><%= reportHeader.username %></span>
                </div>
                <div class="items">
                    <span><b>نام:</b></span>
                    <span><%= reportHeader.userFirstname %></span>
                </div>
                <div class="items">
                    <span><b>نام خانوادگی:</b></span>
                    <span><%= reportHeader.userLastname %></span>
                </div>
                <div class="items">
                    <span><b>زمان چاپ:</b></span>
                    <span><%= reportHeader.currentDate %></span>
                </div>
            </div>
            <div class="right">
                <img src= "<%= reportHeader.userAvatar %>" alt="avatar"/>
            </div>
        </div>
        <div class="table">
            <div class="tr title">
                <div class="tc">آزمون</div>
                <div class="tc">تاریخ</div>
                <div class="tc">تعداد سوالات</div>
                <div class="tc">نمره اخذ شده</div>
                <div class="tc">زمان شروع</div>
            </div>
            <% for(var i = 0; i < report.length; i++) { %>
                <div class="tr title">
                    <div class="tc"><%= report[i].examName %></div>
                    <div class="tc"><%= report[i].examDate %></div>
                    <div class="tc"><%= report[i].questionsCount %></div>
                    <div class="tc" dir="ltr"><%= report[i].userGrade %></div>
                    <div class="tc"><%= report[i].userStartTime %></div>
                </div>
            <% } %>
        </div>
        <div class="print-btn" id="print-btn">
            <i class="fa fa-print"></i>
        </div>
        <div class="print-btn" id="print-btn1">
            <i class="fa fa-print"></i>
        </div>
        <div class="print-btn" id="print-btn2">
            <i class="fa fa-print"></i>
        </div>

        <div class="bottom">
            <div class="sign">
                <img src="https://upload.wikimedia.org/wikipedia/commons/e/e8/Lily_Collins%27_Signature.png" alt="sign">
            </div>
            <div class="logo">
                <img src="https://www.traveller.com.au/content/dam/images/g/u/n/q/h/0/image.related.socialLead.620x349.gunpvd.png/1488330286332.png" alt="logo">
            </div>
        </div>
    </div>
    <script>
        var ptintBtn = document.getElementById('print-btn');
        var ptintBtn1 = document.getElementById('print-btn1');
        var ptintBtn2 = document.getElementById('print-btn2');

        ptintBtn.addEventListener('click', function() {
            if (!ptintBtn.classList.contains('show')) {
                ptintBtn.classList.add('show');
                ptintBtn1.classList.add('show');
                ptintBtn2.classList.add('show');
            } else {
                ptintBtn.classList.remove('show');
                ptintBtn1.classList.remove('show');
                ptintBtn2.classList.remove('show');
            }

        });
        ptintBtn2.addEventListener('click', function() {
            window.print();
        });
    </script>
</body>

</html>